[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file

per-file-ignores =
    __init__.py:F401

count = True
statistics = True
